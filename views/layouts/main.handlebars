<!-- views/layouts/main.handlebars -->

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IP Lookup</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <main class="container mx-auto px-4">
      {{{body}}}
    </main>
  </body>
</html>

<div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full mx-auto">
  <h1 class="text-2xl font-bold mb-4 text-center text-gray-800">IP Lookup
    Results</h1>
  {{#if error}}
    <p class="text-red-500 text-center">{{error}}</p>
  {{else}}
    <div class="space-y-2">
      {{#each ipData}}
        <p><strong class="text-gray-700">{{@key}}:</strong>
          <span class="text-blue-600">{{this}}</span></p>
      {{/each}}
    </div>
  {{/if}}
</div>